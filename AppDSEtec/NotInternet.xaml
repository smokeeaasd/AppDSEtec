<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppDSEtec.NotInternet">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Style="{StaticResource GradientBG}">
                <Label Text=":(" FontSize="250" TextColor="#eee" FontFamily="UbuntuMedium" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
                <Label Text="Parece que você não está conectado(a) à internet." HorizontalTextAlignment="Center"
                        FontFamily="EpilogueRegular" TextColor="#eee" FontSize="20" Margin="30"/>
                <Label Text="Se você habilitou a internet, feche o app e abra novamente." HorizontalTextAlignment="Center"
                        FontFamily="EpilogueRegular" TextColor="#eee" FontSize="20" Margin="30"/>

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>